{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "lib": ["dom", "es7"],
    "rootDirs": ["main", "app", "template"]
  },
  "include": [
    "main/**/*.ts", "app/**/*.ts"
  ],
  "exclude": [
    "main/main.platformBrowser.ts"
  ]
}
